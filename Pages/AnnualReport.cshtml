@page
@model Khronos4.Pages.AnnualReportModel
@{
    ViewData["Title"] = $"Annual Report - {Model.ServiceYearEnd} Service Year";
}

<div class="page_heading">
    <h4>@Model.UserFullName's Annual Report</h4>
    <h4>@Model.ServiceYearEnd Service Year</h4>
    <p>September 1, @Model.ServiceYearStart - August 31, @Model.ServiceYearEnd</p>
</div>

<div class="report-container">
    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Hours</th>
                    <th>Placements</th>
                    <th>Return Visits</th>
                    <th>Bible Studies</th>
                    <th>LDC Credit</th>
                    <th>Total Hours</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var summary in Model.MonthlySummaries)
                {
                    <tr>
                        <td>@summary.MonthName</td>
                        <td>@summary.Hours</td>
                        <td>@summary.Placements</td>
                        <td>@summary.RVs</td>
                        <td>@summary.BS</td>
                        <td>@summary.LDC</td>
                        <td>@(summary.Hours + summary.LDC)</td>
                    </tr>
                }
                <!-- Yearly Total Row -->
                <tr class="annual-totals-row">
                    <td>@Model.ServiceYearEnd Total</td>
                    <td>@Model.TotalYearlyHours</td>
                    <td>@Model.TotalYearlyPlacements</td>
                    <td>@Model.TotalYearlyRVs</td>
                    <td>@Model.TotalYearlyBS</td>
                    <td>@Model.TotalYearlyLDC</td>
                    <td>@(Model.TotalYearlyHours + Model.TotalYearlyLDC)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
